{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["dom"],
    "allowJs": true,
    "jsx": "react",
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"]
}
